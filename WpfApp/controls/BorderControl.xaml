<Window x:Class="WpfApp.controls.BorderControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.controls"
        mc:Ignorable="d"
        Title="BorderControl" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Red" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="30"
                CornerRadius="5" Background="BlueViolet">
            <Label HorizontalAlignment="Center" Foreground="White" FontWeight="Bold">用户名：</Label>
        </Border>
    </Grid>
</Window>
