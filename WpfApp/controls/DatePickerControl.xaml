<Window x:Class="WpfApp.controls.DatePickerControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.controls"
        mc:Ignorable="d"
        Title="DatePickerControl" Height="450" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <DatePicker Name="dpDate" HorizontalAlignment="Left" Margin="20,20,20,0"
                    VerticalAlignment="Top" Width="360" Height="32"
                    DisplayDate="2021-05-27" DisplayDateStart="2021-05-01" DisplayDateEnd="2021-05-31"
                    FirstDayOfWeek="Monday" IsDropDownOpen="False" IsTodayHighlighted="False"
                    SelectedDate="2021-05-27" SelectedDateFormat="Long" SelectedDateChanged="dpDate_SelectedDateChanged"></DatePicker>
    </Grid>
</Window>
