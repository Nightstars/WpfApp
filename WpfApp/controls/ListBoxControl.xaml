<Window x:Class="WpfApp.controls.ListBoxControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.controls"
        mc:Ignorable="d"
        Title="ListBoxControl" Height="450" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <ListBox Name="lbClasses" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" 
                 Width="360" Margin="20,20,20,0" SelectionChanged="lbClasses_SelectionChanged" 
                 ItemsSource="{Binding}" SelectionMode="Multiple">
            <!--<ListBoxItem Content="软件班" IsSelected="True"></ListBoxItem>
            <ListBoxItem Content="数据班"></ListBoxItem>
            <ListBoxItem Content="英语班"></ListBoxItem>-->
        </ListBox>
    </Grid>
</Window>
