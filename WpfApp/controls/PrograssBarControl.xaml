<Window x:Class="WpfApp.controls.PrograssBarControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.controls"
        mc:Ignorable="d"
        Title="PrograssBarControl" Height="450" Width="800">
    <Grid>
        <ProgressBar Name="pbar1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="21" 
                     Width="300" Margin="200" Value="20" Minimum="0" Maximum="100"
                     IsIndeterminate="false" ValueChanged="pbar1_ValueChanged"></ProgressBar>
        <ProgressBar Name="pbar2" SmallChange="2" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical"
                     Height="300" Width="21" Margin="50,30" Value="32"
                     Minimum="0" Maximum="100" IsIndeterminate="True"></ProgressBar>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Content="加载" 
                Margin="180,100" Width="70" Click="Button_Click"></Button>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" 
               Height="18" Margin="520,200,0,0" Name="pgs"></TextBlock>
    </Grid>
</Window>
